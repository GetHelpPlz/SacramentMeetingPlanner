@model IEnumerable<SacramentMeetingPlanner.Models.Hymn>

@{
    ViewData["Title"] = "Hymns";
}

<h2>Hymns</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Hymn</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Number</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hymn in Model)
        {
            <tr>
                <td>@hymn.Number</td>
                <td>@hymn.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@hymn.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@hymn.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@hymn.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
