<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SacramentMeetingPlanner</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SacramentMeetingPlanner.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm mb-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white nav-title px-3 py-2 rounded" asp-controller="Home" asp-action="Index">
                   YSA Sacrament Planner
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarMain">
                    <ul class="navbar-nav nav-square d-flex align-items-stretch">
                        <li class="nav-item">
                            <a class="nav-link nav-square-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-square-link" asp-controller="Meetings" asp-action="Index">View Meetings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-square-link" asp-controller="Speakers" asp-action="Index">Speakers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-square-link" asp-controller="Hymns" asp-action="Index">Hymns</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center py-3 text-white">
            &copy; 2025 - SacramentMeetingPlanner - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none ms-1">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
