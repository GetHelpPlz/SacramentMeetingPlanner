@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the YSA Sacrament Planner!</h1>
    <p class="lead">Manage your meetings, speakers, and hymns.</p>

    <div class="container mt-5">
        <div class="row g-4 justify-content-center">
            <div class="col-md-3">
                <a asp-controller="Meetings" asp-action="Create" class="text-decoration-none">
                    <div class="card text-center h-100 shadow-sm hover-card">
                        <div class="card-body">
                            <img src="~/images/Add_Meeting.webp" class="card-icon mb-3" alt="Create Meeting" />
                            <h5 class="card-title">Create New Meeting</h5>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a asp-controller="Meetings" asp-action="Index" class="text-decoration-none">
                    <div class="card text-center h-100 shadow-sm hover-card">
                        <div class="card-body">
                            <img src="~/images/Meetings.webp" class="card-icon mb-3" alt="View Meetings" />
                            <h5 class="card-title">View Meetings</h5>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a asp-controller="Speakers" asp-action="Index" class="text-decoration-none">
                    <div class="card text-center h-100 shadow-sm hover-card">
                        <div class="card-body">
                            <img src="~/images/speakers.webp" class="card-icon mb-3" alt="Speakers" />
                            <h5 class="card-title">See Our Speakers</h5>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a asp-controller="Hymns" asp-action="Index" class="text-decoration-none">
                    <div class="card text-center h-100 shadow-sm hover-card">
                        <div class="card-body">
                            <img src="~/images/Hymns.webp" class="card-icon mb-3" alt="Hymns" />
                            <h5 class="card-title">Hymns</h5>
                        </div>
                    </div>
                </a>
            </div>

            <div id="hymn-quotes-slider" class="quote-slider">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="quote @(i == 0 ? "active" : "")">
                        @Model[i].Text
                    </div>
                }
            </div>
            <script>
                let quotes = document.querySelectorAll('#hymn-quotes-slider .quote');
                let currentIndex = 0;

                function showNextQuote() {
                    quotes[currentIndex].classList.remove('active');
                    currentIndex = (currentIndex + 1) % quotes.length;
                    quotes[currentIndex].classList.add('active');
                }

                setInterval(showNextQuote, 5000); // Change quote every 5 seconds
            </script>

        </div>
    </div>
</div>

